{
    // VS Code launch configurations for Go
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch current file (advanced)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "UI",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src/simple-traces/frontend/src",
            "sourceMaps": true
        }
    ]
}