# Example environment variables
# Copy this to .env and adjust as needed

# Database configuration
DB_TYPE=sqlite
DB_CONNECTION=/data/traces.db

# For PostgreSQL:
# DB_TYPE=postgres
# DB_CONNECTION=postgres://username:password@localhost:5432/traces?sslmode=disable

# Server configuration
PORT=8080

# Logging configuration
# Log levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# OpenTelemetry configuration
# Enable OTLP trace collection (true/false)
OTLP_ENABLED=true
# OTLP endpoint (used for documentation, actual HTTP endpoint is /v1/traces)
OTLP_ENDPOINT=:4318
